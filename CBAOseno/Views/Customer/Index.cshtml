@using CBAOseno.Core.Models
@model IEnumerable<Customer>

@{
    ViewData["Title"] = "Customers";
}


<div class="text-center">
    <h1 class="display-4">List of Customers</h1>
</div>
<div class="text-right">
    
     <a asp-area="" asp-controller="Customer" asp-action="Create" class="btn btn-primary">Add new customer</a>
</div>
<br />


@if(Model.Count() > 0)
    {
<table class="table table-bordered table-striped" style='width:100%'>

<thead class="thead-light">
    <tr>
        <th>S/n</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Gender</th>
        <th>Status</th>
        <th>Options</th>
        
    </tr>
</thead>
<tbody>
    @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.CustomerId</td>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Email</td>
                        <td>@item.Gender</td>
                        <td>@item.Status</td>
                        <td>
                            <a asp-controller="Customer" asp-action="Edit" asp-route-id="@item.CustomerId" class="btn btn-outline-success">Edit</a>
                           <a asp-controller="Customer" asp-action="Detail" asp-route-id="@item.CustomerId" class="btn btn-outline-primary">Details</a>
                           
                        </td>
                    </tr>
                }
   
</tbody>
</table>
}
    else
    {
        <p>No items created yet</p>
    }

