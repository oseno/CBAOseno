@using CBAOseno.Core.Enums
@model CBAOseno.WebApi.ViewModels.AddCustomerAccountViewModel

@{
    ViewData["Title"] = "Create Customer Account";
}

<div class="text-center">
    <h1 class="display-4">Create Customer Account</h1>
</div>


<div class="">
     <form method="post">

         <div asp-validation-summary = "All" class = "text-danger"></div>


          <div class="text-right">
     <a asp-area="" asp-controller="CustomerAccount" asp-action="Index" class="btn btn-primary">Back</a>
     <button type="submit" class="btn btn-outline-primary">Create</button>
    </div>
    <br />  


   <div class="form-row">
       <div class="form-group col-md-6">
       <label asp-for = "AccountName" class="control-label">Account Name</label>
      <input asp-for = "AccountName" class="form-control" />
      <span asp-validation-for = "AccountName" class = "text-danger"></span>
      </div>

	 <div class="form-group col-md-6">
     <label asp-for = "AccountStatus" class="control-label">Account Status</label>
      <select asp-for = "AccountStatus" class = "form-control" asp-items="Html.GetEnumSelectList<AccountStatus>()">
        <option value="">Please select</option>
      </select>
      <span asp-validation-for = "AccountStatus" class = "text-danger"></span>
      </div>
	</div>
