@using CBAOseno.Core.Models
@model IEnumerable<CustomerAccount>

@{
    ViewData["Title"] = "Customer Accounts";
}


<div class="text-center">
    <h1 class="display-4">List of Customer Accounts</h1>
</div>
<div class="text-right">
    
     <a asp-area="" asp-controller="CustomerAccount" asp-action="Create" class="btn btn-primary">Add new customer</a>
</div>
<br />


@if(Model.Count() > 0)
    {
<table class="table table-bordered table-striped" style='width:100%'>

<thead class="thead-light">
    <tr>
		<th>S/n</th>
        <th>Account Number</th>
        <th>Customer ID</th>
		<th>Account Name</th>
		<th>Account Status</th>
        <th>Account Balance</th>
		<th>Account Type</th>
        <th>Options</th>
        
    </tr>
</thead>
<tbody>
    @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.AccountId</td>
						<td>@item.AccountNumber</td>
                        <td>Customer.NewCustomerId</td>
						<td>@item.AccountName</td>
                        <td>@item.AccountStatus</td>
						<td>@item.AccountBalance</td>
						<td>@item.AccountType</td>
                        <td>
                            <a asp-controller="CustomerAccount" asp-action="Edit" asp-route-id="@item.AccountId" class="btn btn-outline-success">Edit</a>
                           <a asp-controller="CustomerAccount" asp-action="Detail" asp-route-id="@item.AccountId" class="btn btn-outline-primary">Details</a>
                           <a asp-controller="CustomerAccount" asp-action="Detail" asp-route-id="@item.AccountId" class="btn btn-outline-danger">Delete</a>
                        </td>
                    </tr>
                }
   
</tbody>
</table>
}
    else
    {
        <p>No items created yet</p>
    }

