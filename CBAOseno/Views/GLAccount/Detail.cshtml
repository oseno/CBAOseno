@using Microsoft.AspNetCore.Identity
@using CBAOseno.Core.Enums
@using CBAOseno.Core.Models
@model CBAOseno.WebApi.ViewModels.EditGLAccountViewModel

@{
    ViewData["Title"] = "GLAccounts";
}


<div class="text-center">
    <h1 class="display-4">GLAccount Details</h1>
</div>

<div class="">
     <form method="post">
        <div asp-validation-summary = "All" class = "text-danger"></div>


          <div class="text-right">
     <a asp-area="" asp-controller="GLAccount" asp-action="Index" class="btn btn-primary">Back</a>
    </div>
    <br />  

   <div class="form-row">
       <div class="form-group col-md-2">
       <label asp-for = "GLAccountId" class="control-label">GLAccount Id</label>
      <input asp-for = "GLAccountId" class="form-control" readonly />
      </div>
      <div class="form-group col-md-5">
       <label asp-for = "GLAccountName" class="control-label">GLAccount Name</label>
      <input asp-for = "GLAccountName" class="form-control" readonly />
      <span asp-validation-for = "GLAccountName" class = "text-danger"></span>
      </div>

	 <div class="form-group col-md-5">
       <label asp-for = "Status" class="control-label">Status</label>
     <select asp-for = "Status" class = "form-control" asp-items="Html.GetEnumSelectList<Status>()" disabled>
        <option value="@Status.Enabled"></option>
      </select>
      </div>
	</div>
	
	</form>
 </div>