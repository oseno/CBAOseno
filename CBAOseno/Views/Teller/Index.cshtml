@using CBAOseno.Core.Models
@model IEnumerable<Teller>

@{
    ViewData["Title"] = "Till account";
}


<div class="text-center">
    <h1 class="display-4">List of Tellers</h1>
</div>
<div class="text-right">
    
     <a asp-area="" asp-controller="Teller" asp-action="Assign" class="btn btn-primary">Assign new Till</a>
</div>
<br />


@if(Model.Count() > 0)
    {
<table class="table table-bordered table-striped" style='width:100%'>

<thead class="thead-light">
    <tr>
        <th>S/n</th>
        <th>Full Name</th>
        <th>Account Name</th>
        <th>Account Number</th>
        <th>Account Balance</th>
        <th>Options</th>
        
    </tr>
</thead>
<tbody>
    @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.UserId</td>
                        <td>
                            <a asp-controller="Teller" asp-action="Unassign" asp-route-id="@item.UserId" class="btn btn-outline-danger">Unassign</a>
                           
                        </td>
                    </tr>
                }
   
</tbody>
</table>
}
    else
    {
        <p>No items created yet</p>
    }

