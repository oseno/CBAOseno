@using CBAOseno.Core.Models
@model IEnumerable<CBAOseno.WebApi.ViewModels.TellerViewModel>


@{
    ViewData["Title"] = "Till account";
}



<h2>All Tills</h2>
<div class="text-right">
    
     <a asp-area="" asp-controller="Teller" asp-action="Assign" class="btn btn-primary">Assign Till To Teller</a>
</div>
<br />
<table class="table table-bordered table-striped" id="dataTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GLAccountName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountBalance)
            </th>
            <th>Options</th>
        </tr>
    </thead>

    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GLAccountName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountBalance)
            </td>
            <td>
			 <a asp-controller="Teller" asp-action="Unassign" asp-route-id="@item.Id" class="btn btn-outline-danger">Unassign</a>
           </td>
        </tr>
}

</table>