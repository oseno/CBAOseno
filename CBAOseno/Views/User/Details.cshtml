@using Microsoft.AspNetCore.Identity
@using CBAOseno.Core.Enums
@using CBAOseno.Core.Models
@model CBAOseno.WebApi.ViewModels.EditUserViewModel

@{
    ViewData["Title"] = "Users";
}


<div class="text-center">
    <h1 class="display-4">User Details</h1>
</div>

<div class="">
     <form method="post">
        <div asp-validation-summary = "All" class = "text-danger"></div>


          <div class="text-right">
     <a asp-area="" asp-controller="User" asp-action="Index" class="btn btn-primary">Back</a>
    </div>
    <br />  

   <div class="form-row">
       <div class="form-group col-md-2">
       <label asp-for = "Id" class="control-label">User Id</label>
      <input asp-for = "Id" class="form-control" readonly />
      </div>
      <div class="form-group col-md-5">
       <label asp-for = "FirstName" class="control-label">First Name</label>
      <input asp-for = "FirstName" class="form-control" readonly />
      <span asp-validation-for = "FirstName" class = "text-danger"></span>
      </div>

	 <div class="form-group col-md-5">
       <label asp-for = "LastName" class="control-label">Last Name</label>
      <input asp-for = "LastName" class="form-control" readonly />
      <span asp-validation-for = "LastName" class = "text-danger"></span>
      </div>
	</div>
	
	<div class="form-row">
      <div class="form-group col-md-4">
          <label asp-for = "Status" class="control-label">Status</label>
     <select asp-for = "Status" class = "form-control" asp-items="Html.GetEnumSelectList<Status>()" disabled>
        <option value="@Status.Enabled"></option>
      </select>  
       </div>

		  <div class="form-group col-md-4">
          <label asp-for = "Gender" class="control-label">Gender</label>
     <select asp-for = "Gender" class = "form-control" asp-items="Html.GetEnumSelectList<Gender>()" disabled>
        <option value="@Model.Gender"></option>
      </select>  
       </div>
	</div>


<div class="form-row">
      <div class="form-group col-md-4">
       <label asp-for = "Email" class="control-label">Email</label>
      <input asp-for = "Email" class="form-control" readonly />
      <span asp-validation-for = "Email" class = "text-danger"></span>
      </div>
</div>
    </form>
 </div>