@using Microsoft.AspNetCore.Identity
@using CBAOseno.Core.Enums
@using CBAOseno.Core.Models
@model CBAOseno.WebApi.ViewModels.EditRoleViewModel

@{
    ViewData["Title"] = "User Roles";
}


<div class="text-center">
    <h1 class="display-4">Role Details</h1>
</div>


<div class="">
     <form method="post">
        <div asp-validation-summary = "All" class = "text-danger"></div>


          <div class="text-right">
     <a asp-area="" asp-controller="UserRole" asp-action="Index" class="btn btn-primary">Back</a>
    </div>
    <br />  


    <div class="form-row">
      <div class="form-group col-md-3">
       <label asp-for = "Id" class="control-label">Role Id</label>
      <input asp-for = "Id" class="form-control" readonly />
      </div>
      <div class="form-group col-md-5">
       <label asp-for = "RoleName" class="control-label">Role Name</label>
      <input asp-for = "RoleName" class="form-control" readonly />
      <span asp-validation-for = "RoleName" class = "text-danger"></span>
      </div>
      <div class="form-group col-md-4">
            <label asp-for = "Status" class="control-label">Status</label>
     <select asp-for = "Status" class = "form-control" asp-items="Html.GetEnumSelectList<Status>()" disabled>
        <option value="@Status.Enabled"></option>
      </select>  
      </div>
      
    </div>

    </form>
 </div>

 <div class = "card">
     <div class = "card-header">
         <h5>Users in this Role</h5>
     </div>
     <div class="card-body">
         @if (Model.Users.Any())
        {
            foreach (var user in Model.Users)
            {
                <h5 class = "card-title">@user</h5>
            }
        }
        else
        {
            <h5 class = "card-title">None at the moment.</h5>
        }
    </div>
    
 </div>
 <br />
 <div class = "card">
     <div class = "card-header">
         <h5>Claims in this Role</h5>
     </div>
     <div class="card-body">
         @if (Model.Claims.Any())
        {
            foreach (var claim in Model.Claims)
            {
                <h5 class = "card-title">@claim</h5>
            }
        }
        else
        {
            <h5 class = "card-title">None at the moment.</h5>
        }
    </div>

 </div>
