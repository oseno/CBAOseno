@using Microsoft.AspNetCore.Identity
@using CBAOseno.Core.Models
@model IEnumerable<ApplicationRole>

@{
    ViewData["Title"] = "User Roles";
}


<div class="text-center">
    <h1 class="display-4">List of User Roles</h1>
</div>
<div class="text-right">
    
     <a asp-area="" asp-controller="UserRole" asp-action="Create" class="btn btn-primary">Add new role</a>
</div>
<br />


@if(Model.Count() > 0)
    {
<table class="table table-bordered table-striped" style='width:100%'>

<thead class="thead-light">
    <tr>
        
        <th>Role Name</th>
       <th>Status</th>
        <th>Options</th>
        
    </tr>
</thead>
<tbody>
    @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                         <td>@item.Status</td>
                        <td>
                            <a asp-controller="UserRole" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success">Edit</a>
                         <a asp-controller="UserRole" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">Details</a> 
                        </td>
                    </tr>
                }
   
</tbody>
</table>
}
    else
    {
        <p>No items created yet</p>
    }

