@model CBAOseno.WebApi.ViewModels.RoleClaimsViewModel
    
<form method = "post">
    <div class = "card">
        <div class = "card-header">
            <h2>Managing Role Claims</h2>
        </div>
        <div class = "card-body">
            @for (int i = 0; i < Model.Cliams.Count; i++)
            {
             <div class = "form-check m-1">
                 <input type = "hidden" asp-for="@Model.Cliams[i].ClaimType" />
                 <input asp-for="@Model.Cliams[i].IsSelected" class="form-check-input" />
                 <label class="form-check-label" asp-for="@Model.Cliams[i].IsSelected">
                     @Model.Cliams[i].ClaimType
                 </label>
             </div>
            }
            <div asp-validation-summary = "All" class="text-danger"></div>
        </div>
        <div class = "card-footer">
            <input type = "submit" value = "Update" class = "btn btn-primary" />
            <a asp-action="Edit" asp-route-id = "@Model.Id" class = "btn btn-outline-primary">Cancel</a>
            <!--<a asp-action="Index" class = "btn btn-outline-primary">Cancel</a>-->
        </div>
    </div>
</form>